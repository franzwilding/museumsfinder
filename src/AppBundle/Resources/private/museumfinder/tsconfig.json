{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "ES5",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "types": [
      "vue-typescript-import-dts"
    ],
    "lib": [
      "dom",
      "es5",
      "es2015.promise"
    ]
  },
  "include": [ "./*.ts" ],
  "exclude": [ "./node_modules" ]
}
